{
  "name": "Sway",
  "packageManager": "yarn@3.4.1",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "electron": "electron index.js",
    "build-mac": "electron-builder",
    "compile": "./node_modules/.bin/esbuild main.js --outfile=index.js --format=cjs",
    "watch": "./node_modules/.bin/esbuild main.js --outfile=index.js --format=cjs --watch"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-devtools-installer": "^3.2.0"
  },
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-build": "^0.0.3",
    "electron-builder": "^23.6.0",
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.17.8"
  },
  "build": {
    "productName": "Sway",
    "appId": "com.sway.sway",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon_512x512.png",
      "category": "public.app-category.communication",
      "target": [
        "dmg"
      ]
    }
  }
}
